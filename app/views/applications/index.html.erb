<h1>Applications</h1>
<h5>Registered to <%= current_user.email %></h5>

<div class="row">
  <div class="col-md-8">
    <% @applications.each do |application| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading"><%= link_to application.name, application %></h4>
          <small><%= application.url %></small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Application", new_application_path, class: 'btn btn-success' %>
  </div>
</div>
